animationsSeries() {
	.series {
		top 0
		bottom 0
		left 0
		right 0

		align-items stretch

		.match {
			&.--currently-playing {
				z-index 200
				flex 1
			}

			&.--is-coming-up-next {
				.result {
					text-transform uppercase
					letter-spacing .35em
				}

				~ .match .map {
					filter grayscale(.75) brightness(.6)
				}
			}

			.inner {
				height 100%

				.map {
					filter brightness(.6)
					opacity 1
				}

				.winner-flag-background {
					filter brightness(.75)
					opacity .4

					&.--horizontal-flag {
						background-size cover
					}
				}

				.text {
					display flex
					flex-direction column
					justify-content center

					.map-name {
						font-size 6rem
						line-height 1
					}

					.result {
						margin 2rem -2rem 4rem
						padding 2rem 0

						box-shadow 0 0 .5rem rgba(#000, .5)
						font-size 3rem
						line-height 1
					}

					.pick-heading {
						font-size 1.75rem
						line-height 3rem
					}

					.pick-team {
						font-size 2.5rem
						line-height 3.75rem
					}
				}
			}
		}

		{block}
	}
}
