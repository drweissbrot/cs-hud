@keyframes postMatchOutroSeries {
	from,
	{postMatchOutroSeconds(7)} {
		opacity 1
		transform none
	}

	{postMatchOutroSeconds(7.4)},
	to {
		opacity 0
		transform scale(.95)
	}
}

@keyframes postMatchOutroSeriesMatchNotCurrentlyPlaying {
	from,
	{animationSeconds(3, 3.4)} {
		max-width 0

		filter grayscale(1)
		opacity 0
	}
}

@keyframes postMatchOutroSeriesMatchCurrentlyPlaying {
	from,
	{animationSeconds(3, 3.4)} {
		max-width 100vw
	}
}

+animationsSeries() {
	animation postMatchOutroSeries $postMatchOutroSeconds ease forwards

	.match {
		&.--currently-playing {
			&,
			.inner {
				animation postMatchOutroSeriesMatchCurrentlyPlaying 3.4s ease forwards
			}
		}

		&:not(.--currently-playing) {
			&,
			.inner {
				animation postMatchOutroSeriesMatchNotCurrentlyPlaying 3.4s ease forwards
			}
		}
	}
}
