.players-alive {
	position absolute
	top $generalPaddingY
	right $generalPaddingX

	display grid
	grid-template-columns 4rem max-content 4rem
	grid-template-rows auto auto
	grid-template-areas 'label label label' 'left vs right'

	color #fff
	box-shadow 0 0 .4rem rgba(#000, .5)
	transition opacity .3s ease

	&:not(.--active) {
		opacity 0
	}

	.label {
		flsize(1.25rem, 1)
		grid-area label

		background rgba(#000, .5)
		padding .25rem 0
		text-transform uppercase
		font-weight bold
		letter-spacing .2rem
	}

	.count,
	.vs {
		font-size 2.5rem
		line-height 4rem
	}

	.count {
		center()
		teamBackground()
		background rgba(#000, .75)
	}

	.vs {
		center()
		font-size 2rem
		background rgba(#000, .5)
		padding 0 1.5rem
	}
}
