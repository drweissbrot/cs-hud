@keyframes preMatchIntroSeries {
	from,
	{preMatchIntroSeconds(5.5)} {
		opacity 0
		transform scale(1.05)
	}

	{preMatchIntroSeconds(5.9)},
	to {
		opacity 1
		transform none
	}
}

@keyframes preMatchIntroSeriesMatchNotCurrentlyPlaying {
	to {
		max-width 0

		filter grayscale(1)
		opacity 0
	}
}

@keyframes preMatchIntroSeriesMatchCurrentlyPlaying {
	to {
		max-width 100vw
	}
}

+animationsSeries() {
	animation preMatchIntroSeries $preMatchIntroSeconds ease forwards
	opacity 0

	.match {
		&.--currently-playing {
			z-index 200
			flex 1

			&,
			.inner {
				animation preMatchIntroSeriesMatchCurrentlyPlaying .4s ease forwards 8.1s
			}

			.result {
				text-transform uppercase
				letter-spacing .35em
			}

			~ .match .map {
				filter grayscale(.75) brightness(.6)
			}
		}

		&:not(.--currently-playing) {
			&,
			.inner {
				animation preMatchIntroSeriesMatchNotCurrentlyPlaying .4s ease forwards 8.1s
			}
		}
	}
}
