@keyframes preMatchIntroMarqueeTop {
	from,
	{animationSeconds(4, 60)} {
		opacity 0
	}

	{animationSeconds(4.3, 60)},
	to {
		opacity 1
	}

	to {
		transform translateX(-200rem)
	}
}

@keyframes preMatchIntroMarqueeBottom {
	from,
	{animationSeconds(4, 60)} {
		opacity 0
	}

	{animationSeconds(4.3, 60)},
	to {
		opacity 1
	}

	to {
		transform translateX(200rem)
	}
}

.marquee {
	position absolute

	animation 60s infinite linear
	filter drop-shadow(0 0 1rem rgba(#000, .5))
	white-space nowrap
	z-index 1

	&.--top {
		top 0
		left -3rem
		animation-name preMatchIntroMarqueeTop
	}

	&.--bottom {
		bottom 0
		right -3rem
		animation-name preMatchIntroMarqueeBottom
	}

	img {
		height 2rem
		margin 2rem 4rem

		&.large {
			transform scale(1.75)
		}
	}
}
