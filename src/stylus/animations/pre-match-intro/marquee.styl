@keyframes marqueeTop {
	from,
	10% {
		opacity 0
	}

	10.5%,
	to {
		opacity 1
	}

	to {
		transform translateX(-200rem)
	}
}

@keyframes marqueeBottom {
	from,
	10% {
		opacity 0
	}

	10.5%,
	to {
		opacity 1
	}

	to {
		transform translateX(200rem)
	}
}

.marquee {
	position absolute

	animation 60s infinite linear
	filter drop-shadow(0 0 1rem rgba(#000, .5))
	white-space nowrap
	z-index 1

	&.--top {
		top 0
		left -3rem
		animation-name marqueeTop
	}

	&.--bottom {
		bottom 0
		right -3rem
		animation-name marqueeBottom
	}

	img {
		height 2rem
		margin 2rem 4rem

		&.large {
			transform scale(1.75)
		}
	}
}
